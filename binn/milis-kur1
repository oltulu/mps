	LANG_MENUEXIT="Çıkış"

	LANG_KEYBOARDSET="Klavye ayarlarını seçiniz"
	LANG_HOSTSET="Bilgisayar adını giriniz"
	LANG_LOCALESET="Bölgesel ayarları seçiniz"
	LANG_TIMEZONESET="Zaman dilimini seçiniz"
	LANG_ROOTPWSET="Root parolarını giriniz"
