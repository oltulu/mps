	LANG_KEYBOARDSET="Set system keyboard"
	LANG_HOSTSET="Set system hostname"
	LANG_LOCALESET="Set system locale"
	LANG_TIMEZONESET="Set system time zone"
	LANG_ROOTPWSET="Set system root password"
